            <CheckBox x:Name="EnableCheckBox"
                     Content="Post-Processing aktivieren (empfohlen)"
                     FontWeight="SemiBold"
                     IsChecked="True"
                     Margin="0,0,0,20"
                     Checked="EnableCheckBox_Changed"
                     Unchecked="EnableCheckBox_Changed"/>

            <!-- Description -->
            <Border BorderBrush="#E0E0E0" BorderThickness="1" Background="#F5F5F5" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Was macht Post-Processing?" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" Foreground="#666666" Margin="0,0,0,5">
                        ‚Ä¢ Korrigiert Grammatik, Zeichensetzung und Gro√üschreibung
